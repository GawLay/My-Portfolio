<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ripple_surface"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone"
    tools:visibility="visible"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imgBtn_call"
        android:layout_width="@dimen/resume_btn_height"
        android:layout_height="@dimen/resume_btn_height"
        android:background="@drawable/bg_call"
        android:src="@drawable/ic_baseline_call_24"
        android:focusable="false"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        style="@style/DescriptionPrimaryTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="@string/call_me"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtn_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBtn_call"
        app:layout_constraintTop_toTopOf="@+id/imgBtn_call" />
    <!--        android:background="bg_"-->
</androidx.constraintlayout.widget.ConstraintLayout>