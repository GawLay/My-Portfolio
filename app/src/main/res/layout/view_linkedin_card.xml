<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AddressCardContainer">

    <ImageView
        android:id="@+id/iv_linkedin"
        style="@style/AddressCardIcon"
        android:src="@drawable/linkedin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_linkedinTitle"
        style="@style/AddressTitle"
        android:text="@string/linkedin"
        app:layout_constraintStart_toEndOf="@+id/iv_linkedin"
        app:layout_constraintTop_toTopOf="@id/iv_linkedin" />

    <TextView
        android:id="@+id/tv_linkedin_description"
        style="@style/AddressDescription"
        android:text="@string/linkedin_description"
        app:layout_constraintStart_toStartOf="@+id/tv_linkedinTitle"
        app:layout_constraintTop_toBottomOf="@+id/tv_linkedinTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>