<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shimmer_repeat_mode="restart"
    app:shimmer_duration="@integer/shimmer_duration"
    app:shimmer_colored="true"
    app:shimmer_base_color="@color/shimmer_color">

    <LinearLayout
        android:id="@+id/ll_shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:background="@color/shimmer_color"
            android:layout_height="@dimen/shimmer_text_height"
            android:layout_marginTop="40dp" />

        <View
            android:layout_width="match_parent"
            android:background="@color/shimmer_color"
            android:layout_height="@dimen/shimmer_text_height"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:background="@color/shimmer_color"
            android:layout_height="@dimen/shimmer_description_height"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>