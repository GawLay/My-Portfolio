<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:alpha="0"
    app:shimmer_base_color="@color/shimmer_color"
    app:shimmer_colored="true"
    app:shimmer_duration="@integer/shimmer_duration"
    app:shimmer_repeat_mode="restart"
    tools:alpha="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="12dp">

        <include layout="@layout/view_shimmer_exp_item" />

        <include
            layout="@layout/view_shimmer_exp_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/experience_card_height"
            android:layout_marginTop="12dp" />

        <include
            layout="@layout/view_shimmer_exp_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/experience_card_height"
            android:layout_marginTop="12dp" />

        <include
            layout="@layout/view_shimmer_exp_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/experience_card_height"
            android:layout_marginTop="12dp" />

        <include
            layout="@layout/view_shimmer_exp_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/experience_card_height"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>