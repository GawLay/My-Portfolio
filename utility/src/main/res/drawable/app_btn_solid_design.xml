<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorSurface">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondaryTransparent_71" />
            <corners android:radius="@dimen/large_radius" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/medium_radius" />
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/colorSurfaceSecondary" />
        </shape>
    </item>
</ripple>
