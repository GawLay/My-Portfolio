<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircularRevealFrameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:elevation">4dp</item>
        <item name="layout_behavior">@string/fabTransformationSheetBehaviour</item>
    </style>

    <style name="BtmNavStyle" parent="MyPortfolioBottomNavStyle">
        <item name="android:background">@drawable/bg_reveal_frame</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BtmNavTransparentActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="TopRoundedCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/large_radius</item>
        <item name="cornerSizeTopLeft">@dimen/large_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="AboutMeGmailText" parent="RegularOnPrimaryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:background">@drawable/bg_gmail</item>
        <item name="android:elevation">9dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="AboutMeImage">
        <item name="android:layout_width">@dimen/about_me_image_x</item>
        <item name="android:layout_height">@dimen/about_me_image_y</item>
        <item name="android:layout_gravity">bottom|center</item>
    </style>

    <style name="AboutMeFab" parent="MyPortfolioFloatingActionRoundedPrimaryStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_margin">16dp</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="AddressCardContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:layout_height">@dimen/address_card_height</item>
        <item name="android:background">@drawable/bg_default_rounded</item>
        <item name="android:backgroundTint">?attr/colorTertiary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="AddressCardIcon">
        <item name="android:layout_width">@dimen/address_icon_size</item>
        <item name="android:layout_height">@dimen/address_icon_size</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="AddressTitle" parent="DescriptionTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="AddressDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="AppBackButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="theme">@style/Theme.MyPortfolio.MyRipple</item>
        <item name="background">@drawable/bg_back_btn</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_ios_new_24</item>
    </style>


    <style name="AppImageBackStyle" parent="AppBackButton">
        <item name="android:tint">@android:color/black</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:layout_width">@dimen/back_size</item>
        <item name="android:layout_height">@dimen/back_size</item>
    </style>

    <style name="ResumeBtnStyle">
        <item name="android:layout_width">@dimen/resume_btn_height</item>
        <item name="android:layout_height">@dimen/resume_btn_height</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/app_btn_solid_design</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_ios_new_24</item>
    </style>

    <style name="AppDownloadStyle">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/app_btn_design</item>
    </style>


    <style name="TemplateDownloadBtnStyle" parent="AppDownloadStyle">
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@android:drawable/stat_sys_download</item>
    </style>

    <style name="ResumeMyNameTitleOnSurfaceStyle" parent="TitleTextOnSurfaceStyle">
        <item name="android:fontFamily">@font/dancing_script_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ResumeMyNameTitleStyle" parent="TitleTextStyle">
        <item name="android:fontFamily">@font/dancing_script_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="ProjectTitleStyle" parent="RegularTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>

    <style name="ProjectNameDividerStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="SettingContainerStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_container_height</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="SettingIconStyle">
        <item name="android:layout_width">@dimen/setting_icon_size</item>
        <item name="android:layout_height">@dimen/setting_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="SettingTextStyle" parent="RegularTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="CompanyTextStyle" parent="DescriptionTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WorkTypeStyle" parent="DescriptionPrimaryTextStyle">
        <item name="android:minWidth">@dimen/work_type_min_width</item>
        <item name="android:minHeight">@dimen/work_type_min_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_work_type</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExperienceCardViewStyle" parent="MyPortfolioMaterialCardViewOutlinedStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="android:layout_height">@dimen/experience_card_height</item>
        <item name="cardCornerRadius">@dimen/default_radius</item>
    </style>

    <style name="FaqTitleStyle" parent="RegularTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FaqContentStyle" parent="RegularTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ShimmerFaqPlaceHolderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/shimmer_color</item>
        <item name="android:layout_height">@dimen/shimmer_text_height</item>
    </style>

    <style name="LineDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?attr/colorSecondary</item>
    </style>

</resources>
